  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "lotus-sutra",
    "wisdom"
  ],
  "author": "Xule Lin",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3"
  }
} 